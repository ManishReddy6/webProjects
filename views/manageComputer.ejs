<!DOCTYPE html>
<html>
<head>
	<title>computer</title>
</head>
<style>
.shadow
  {
    margin: 10px 5%;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.5);
    background: rgba(100,150,120,0.1);
    border-radius: 4px;
  }
table 
{
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th 
{
  border: 2px solid rgba(0,0,255,0.6);;
  text-align: center;
  padding: 8px;
}

tr:nth-child(even) 
{
  background-color: rgba(100,150,120,0.2);
}

button a
{
  text-decoration: none;
  color: white;
}
button
{
  width: 80px;
  background: green;
  height: 30px;
  color: white;
}
.search
  {
    margin: 20px;
    margin-right: 60px;
    padding: 20px;
    float: right;
  }
  input
  {
    width: 180px;
    height: 30px;
    padding: 5px;
  }
  button
  {
      height: 40px;
      width: 80px;
        cursor: pointer;
        border-radius: 4px;
        border:none;
        background: green;
        padding: 5px 8px;
  }
</style>
<body>
  <div><%- include('../public/nav.ejs') %></div>
	<div class="search">
  <form action="/manageComputer" method="post">
    <input type="text" name="search" placeholder="computer ID">
    <button>
      search
    </button>
  </form>
    </div>
  <div class="shadow">
		<table>
			<thead>
			<tr>
			<th>Computer ID</th>
			<th>Computer Name</th>
			<th>Computer IP</th>
			<th>Action</th>
		  </tr>
		  </thead>
		  <tbody>
		    <% if(items.length>0){ %>
            <% items.forEach(item=>{ %>
            <tr>
            	<td><%= item.computerID %></td>
            	<td><%= item.computerName %></td>
            	<td><%= item.computerIP %></td>
            	<td>
            		<button><a href="/updateComputer/<%= item.computerID%>"> update</a></button>
            		<button><a href="/manageComputer/<%= item.computerID%>">delete</a></button>
            	</td>
            </tr>
            <% }) %>
            <% }else{ %>
            <tr>
            	<td colspan="4">no computers</td>
            </tr>
            <% } %>
            </tbody>
		</table>
	</div>
</body>
</html>