<!DOCTYPE html>
<html>
<head>
	<title>Users</title>
</head>
<style type="text/css">
  .shadow
  {
    margin: 20px 10%;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.5);
  }
	.total
	{
		height: 80%;
		width: 100%;
		display: flex;
		flex-wrap: wrap;
		justify-content: space-around;
	}
    .add
    {
    	width: 100%;
    }

	.left-side-bar
	{
		width: 47%;
		float: left;
		display: flex;
		justify-content: space-around;
		flex-direction: column;
	}

    .right-side-bar
	{
		width: 47%;
		margin-right: 20px; 
		display: flex;
		flex-direction: column;	
		float: right;
	}

	.form
	{
		margin-top: 20px; 
	} 

    .left-side-bar label
    {
    	margin-left: 15px;
    }    

    .right-side-bar label
    {
    	margin-left: 5px;
    }

    .left-side-bar input
    {
    	width: 100%;
    	height: 50px;
    	margin-left: 15px;
    	margin-right: 5px;
    	margin-bottom: 20px;
    }    

    .right-side-bar input
    {
    	right: 50px;
    	width: 100%;
    	height: 50px;
    	margin-left: 5px;
    	margin-right: 5px;
    	margin-bottom: 20px;
    }

    .submit
	{
		display: flex;
		align-items: center;
		justify-content: center; 
	}

	.submit button
	{
		width: 80px;
		height: 40px;
		padding: 10px 5px;
		background: green;
		margin-bottom: 30px;
	}

	.current 
	{
		float: right;
	}
</style>
</head>
<body>
	<%- include('../public/nav.ejs') %>
	<div class="shadow">
	<% if(items.length>0){ %>
	<% items.forEach(item=>{ %>
	<form action="/updateUser/<%= item.computerID %>" method="post">
		<div class="total">
		<div class="add">
		<div class="left-side-bar">
			<div class="form">
				<label>Username</label>
				<input type="text" name="Username" class="form-control" placeholder="Username" value="<%= item.Username %>" disabled >
		    </div>
		    <div class="form">
		    	<label>User Address</label>
		    	<input type="text" name="UserAddress" placeholder="User Address" value="<%= item.User_Address %>" disabled>
		    </div>
		    <div class="form">
		    	<label>Computer Name</label>
		    	<input type="text" name="computerName" placeholder="Computer Name" value="<%= item.computer_name %>" disabled>
		    </div>
			<div class="form">
				<label>Mobile Number</label>
				<input type="text" name="Mobile" class="form-control" placeholder="Mobile Number" value="<%= item.Mobile_Number %>" disabled>
		    </div>
		</div>
		<div class="right-side-bar">
			<div class="form">
				<label>Email</label>
				<input type="text" name="Email" class="form-control" placeholder="Email" value="<%= item.Email %>" disabled>
		    </div>
		    <div class="form">
		    	<label>Computer ID</label>
		    	<input type="text" name="computerID" value="<%= item.computerID %>" placeholder="Computer ID" 
		    	value="<%= item.computerID %>" disabled>
		    </div>
			<div class="form">
				<label>ID Proof</label>
				<input type="text" name="IDproof" class="form-control" placeholder="IDproof" value="<%= item.ID_proof %>" disabled>
		    </div>
		    <div class="form">
		    	<label>Login Time</label>
				<input type="text" name="loginTime" class="form-control" placeholder="Login Time" value="<%= item.time %>">
		    </div>
		</div>
	    </div>
	    <div class="submit">
			<button type="submit">Submit</button>
		</div>
	    </div>
	</form>
	<% }) %>
	<% } %>
    </div>
    <script type="text/javascript" src="add-computer.js"></script>
</body>
</html>